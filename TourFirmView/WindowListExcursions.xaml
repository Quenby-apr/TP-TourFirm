<Window x:Class="TourFirmView.WindowListExcursions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourFirmView"
        mc:Ignorable="d"
        Title="Отчёт по экскурсиям" Height="300" Width="400">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="222" Margin="0,0,0,0" VerticalAlignment="Top" Width="400">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn IsThreeState="True" Width="30" />
                <DataGridTextColumn Header="Название" Width="370" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ButtonWord" Content="Word" HorizontalAlignment="Left" Margin="30,240,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ButtonExcel" Content="Excel" HorizontalAlignment="Left" Margin="150,240,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="270,240,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
