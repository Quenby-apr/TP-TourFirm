<Window x:Class="TourFirmView.WindowListExcursions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourFirmView"
        mc:Ignorable="d"
        Title="Отчёт по экскурсиям" Height="400" Width="400" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="ListBoxTours" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionMode="Multiple" HorizontalAlignment="Center" Height="280" Margin="0,10,0,0" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="ButtonWord" Content="Word" HorizontalAlignment="Left" Margin="30,320,0,0" VerticalAlignment="Top" Width="75" Click="ButtonWord_Click"/>
        <Button x:Name="ButtonExcel" Content="Excel" HorizontalAlignment="Left" Margin="150,320,0,0" VerticalAlignment="Top" Width="75" Click="ButtonExcel_Click"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="270,320,0,0" VerticalAlignment="Top" Width="75" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
