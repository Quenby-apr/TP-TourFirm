<Window x:Class="TouristTourFirmView.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristTourFirmView"
        mc:Ignorable="d"
                Title='Турфирма "Иван Сусанин"' Height="380" Width="725"  ResizeMode="NoResize">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="MenuItemTravels" Header="Путешествия" Click="MenuItemTravels_Click"></MenuItem>
            <MenuItem x:Name="MenuItemExcursions" Header="Экскурсии" Click="MenuItemExcursions_Click"></MenuItem>
            <MenuItem x:Name="MenuItemPlaces" Header="Места" Click="MenuItemPlaces_Click"></MenuItem>
            <MenuItem x:Name="MenuItemGuidesList" Header="Список гидов" Click="MenuItemGuidesList_Click"></MenuItem>
            <MenuItem x:Name="MenuItemReport" Header="Отчёт по путешествиям" Click="MenuItemReport_Click"></MenuItem>
            <MenuItem x:Name="MenuItemExit" Header="Выход" Click="MenuItemExit_Click" Margin="210,0,0,0"></MenuItem>
        </Menu>
        <Image HorizontalAlignment="Left" Height="321" Margin="0,25,0,0" 
               VerticalAlignment="Top" Width="731" Source="logo.png" Stretch="UniformToFill"/>
    </Grid>
</Window>
