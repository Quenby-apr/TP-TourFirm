<Window x:Class="TouristTourFirmView.WindowSignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         Title="Авторизация" Height="395" Width="380" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="{StaticResource Label_fontFamily}"/>
            <Setter Property="Margin" Value="0, 10, 0, 0"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Stretch" Height="350" Margin="20">
        <Label Content="Логин:" Margin="0, 30, 0, 0"/>
        <TextBox x:Name="TextBoxLogin" Style="{StaticResource General_textbox}"/>
        <Label Content="Пароль:"/>
        <TextBox x:Name="TextBoxPassword" Style="{StaticResource General_textbox}"/>
        <Button Content="Войти" Style="{StaticResource General_button}" Click="ButtonSignIn_Click" Margin="0, 40, 0, 0"/>
        <Button Content="Зарегистрироваться" Style="{StaticResource General_button}" Background="#7c7b89" Margin="0, 20, 0, 0" Click="ButtonGoToSignUp_Click"/>
    </StackPanel>
</Window>