<Window x:Class="TouristTourFirmView.WindowExcursion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristTourFirmView"
        mc:Ignorable="d"
         Title="Формирование экскурсии" Height="350" Width="500">
    <Window.Resources>
        <Style  TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
        <Style  TargetType="TextBox">
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="10,0,10,10" />
        </Style>
    </Window.Resources>
    
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0 0 0 0" VerticalAlignment="Top"  HorizontalAlignment="Center" MinWidth="250px" Height="260" Width="450" ScrollViewer.HorizontalScrollBarVisibility="Auto" UseLayoutRounding="False" Grid.RowSpan="2" >
            <Label Content="Название"  Margin="0,0,0,0" Height="35"/>
            <TextBox x:Name="NameTextBox"/>
            <Label Content="Стоимость" />
            <TextBox x:Name="PriceTextBox"/>
            <Label Content="Продолжительность"/>
            <TextBox x:Name="DurationTextBox"/>
            <Label Content="Тип" />
            <TextBox x:Name="TypeTextBox"/>
        </StackPanel>
        <Button x:Name="ButtonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="100,270,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="285,270,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
